    <Paragraph Type="Character">
      <Text>LITTLE</Text>
    </Paragraph>
    <Paragraph Type="Dialogue">
      <Text>Hey Mama.</Text>
    </Paragraph>
    <Paragraph Type="Character">
      <Text>JUAN</Text>
    </Paragraph>
    <Paragraph Type="Dialogue">
